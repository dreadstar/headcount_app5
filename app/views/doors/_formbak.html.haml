%p
  %strong Location:
  = @location_id
= form_for([@location, @door]) do |f|
  - if @door.errors.any?
    #error_explanation
      %h2
        = pluralize(@door.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @door.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name

  .field
    = f.label :current_sate
    %br/
    = f.text_field :cureent_state
  -#.field
    -# = f.label :capacity
    -# %br/
    -# = f.text_field :capacity


  .actions
    = f.submit
