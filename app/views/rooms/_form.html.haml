%p
  %strong Location:
  = @location.name
= form_for([@location, @room]) do |f|
  - if @room.errors.any?
    #error_explanation
      %h2
        = pluralize(@room.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :max_cap
    %br/
    = f.text_field :max_cap
  .field
    = f.label :current_state
    %br/
    = f.text_field :current_state

  .actions
    = f.submit

