= form_for @location, :html => { :multipart => true }  do |f|
  - if @location.errors.any?
    #error_explanation
      %h2
        = pluralize(@location.errors.count, "error")
        prohibited this location from being saved:
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :site_url
    %br/
    = f.text_field :site_url
  .field
    = f.label :yelp_url
    %br/
    = f.text_field :yelp_url
  .field
    = f.label :current_state
    %br/
    = f.text_field :current_state
  .field
    = f.label :max_cap
    %br/
    = f.text_field :max_cap
  .actions
    = f.submit
