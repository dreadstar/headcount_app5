<script type="text/x-handlebars" data-template-name="location-list">
<%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-large btn-primary" %>
{{#if length}}
<section id="main">
{{#if canToggle}}
{{input type="checkbox" id="toggle-all" checked=allLocations.allAreDone}}
{{/if}}
<ul id="location-list">
{{#each}}
<li {{bind-attr class="isCompleted:completed isEditing:editing"}}>
{{#if isEditing}}
{{todo-input type="text" class="edit" value=bufferedTitle focus-out="doneEditing" insert-newline="doneEditing" escape-press="cancelEditing"}}
{{else}}
{{input type="checkbox" class="toggle" checked=isCompleted}}
<label {{action "editLocation" on="doubleClick"}}>{{title}}</label>
<button {{action "removeLocation"}} class="destroy"></button>
{{/if}}
</li>
{{/each}}
</ul>
</section>
{{/if}}
</script>
<script type="text/x-handlebars" data-template-name="headcount">
<section id="headcountapp">
<header id="header">
<h1>CrowdSenz</h1>
{{todo-input id="new-todo" type="text" value=newTitle action="createLocation" placeholder="Where do you wanna party?"}}
</header>
{{outlet}}
{{#if length}}
<footer id="footer">
<span id="todo-count"><strong>{{remaining.length}}</strong> {{pluralize 'item' remaining.length}} left</span>
<ul id="filters">
<li>
{{#link-to "headcount.index" activeClass="selected"}}All{{/link-to}}
</li>
<li>
{{#link-to "headcount.favorite" activeClass="selected"}}<span class="glyphicon glyphicon-heart"></span>Favorite{{/link-to}}
</li>
<li>
{{#link-to "headcount.popular" activeClass="selected"}}<span class="glyphicon glyphicon-star"></span>Popular{{/link-to}}
</li>
<li>
{{#link-to "headcount.hottest" activeClass="selected"}}<span class="glyphicon glyphicon-fire"></span>Hottest{{/link-to}}
</li>
<li>
{{#link-to "headcount.coolest" activeClass="selected"}}Coolest{{/link-to}}
</li>
</ul>
{{#if completed.length}}
<button id="clear-completed" {{action "clearCompleted"}}>
Clear completed ({{completed.length}})
</button>
{{/if}}
</footer>
{{/if}}
</section>
